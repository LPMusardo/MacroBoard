<ResourceDictionary x:Class="Macroboard.LightTheme"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="CustomWindowStyle" TargetType="{x:Type Window}">
        <Setter Property="BorderBrush" Value="#BFD0E3" />
        <Setter Property="Background" Value="#F5F5F5" />
        <!--<Setter Property="BorderThickness" Value="5"  />-->
        <!--<Setter Property="WindowStyle" Value="SingleBorderWindow" />-->
    </Style>
    <!--set the text block color to black / add the costume style in mainwindow / set the size of the text under each workflow-->

    <Style x:Key="CustomTextBox" TargetType="TextBox">
        <Setter Property="Background" Value="#EBEBEB"/>
        <Setter Property="BorderBrush" Value="SandyBrown"/>
    </Style>

    <Style x:Key="CustomStackPanel" TargetType="StackPanel">
        <Setter Property="Background" Value="#E9E3F1"/>
    </Style>

    <Style x:Key="CustomBorder" TargetType="Border">
        <Setter Property="BorderBrush" Value="#BBBBBB"/>
    </Style>

    <Style x:Key="CustomListBox" TargetType="ListBox">
        <Setter Property="Background" Value="#CAD8EB"/>
    </Style>

    <Style x:Key="CustomMenuItems" TargetType="MenuItem">
        <Setter Property="BorderBrush" Value="#EBEBEB"/>
    </Style>

    <Style x:Key="CustomImageEdit" TargetType="Image">
        <Setter Property="Source" Value="../../Resources/icon_add.png"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Width" Value="30"/>
    </Style>

    <Style x:Key="CustomImageRearrange" TargetType="Image">
        <Setter Property="Source" Value="../../Resources/icon_edit.png"/>
    </Style>
    <Style x:Key="CustomImageThemes" TargetType="Image">
        <Setter Property="Source" Value="../../Resources/icon_themes.png"/>
    </Style>
   
</ResourceDictionary>