<Window x:Class="MacroBoard.ScreenShot.ScreenShotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MacroBoard.ScreenShot"
        mc:Ignorable="d"
        Title="ScreenShot"
        Height="75"
        Width="200"
        AllowsTransparency="True"
        WindowStyle="None"
        >

    <Window.Background>
        <SolidColorBrush Opacity="0"/>
    </Window.Background>

    <Border BorderThickness="3" BorderBrush="Purple" CornerRadius="6" Background="#80FFEBEE" >
        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="13*"/>
                <ColumnDefinition Width="27*"/>
            </Grid.ColumnDefinitions>

            <Button Content="Cancel" Background="MediumVioletRed" Height="42" Foreground="FloralWhite" BorderBrush="Purple" VerticalAlignment="Bottom" Grid.Column="0" Margin="5,0,0,5" IsCancel="True"/>
            <Button Content="Take Screenshot" Background="MediumVioletRed" Height="42" Click="Click_ScreenShot" Foreground="FloralWhite" BorderBrush="Purple" VerticalAlignment="Bottom" Grid.Column="1" Margin="5,0,5,5"/>
            
        </Grid>
    </Border>
</Window>
